@model eComm_Reporting_Application.Models.ReportPageDropdownModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Sierra Reports Subscriptions";
}
@section Scripts{
    <script src="~/js/sierraReports.js"></script>
}
<link rel="stylesheet" href="~/css/sierraReports.css" />

<div class="page-header">
    <div class="page-title">
        <h1 class="title-text">Sierra Reports Subscriptions</h1>
    </div>
</div>

<input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken" value="@Xsrf.GetAndStoreTokens(Context).RequestToken" />

<div class="filter-data">

    <div class="first-row">
        <div class="main-dropdown">
            <label class="filter-label" for="sierraFolderDropdown">Folder:</label>
            <select id="sierraFolderDropdown" name="sierraFolderDropdown" onchange="selectedFolder();" multiple>
                @foreach (var folder in @Model.folders)
                {
                    <option value=@folder.folderName> @folder.folderName </option>
                }
            </select>
        </div>
        <div class="main-dropdown">
            <label class="filter-label" for="sierraReportDropdown">Report Name:</label>
            <select id="sierraReportDropdown" name="sierraReportDropdown">
            </select>
        </div>
    </div>

    <button id="btnViewSierraData" class="btnViewData" type="button" hidden>View Data</button>
</div>

<div class="separator-line">
</div>

<div class="addNew" id="addNewDiv">
    <h4 class="addNewText">Add New Subscription</h4>
    <button id="addNewBtn" class="addNewBtn"><i class="fas fa-plus-circle"></i></button>
</div>

<div id="sierraSubscriptionData">
</div>