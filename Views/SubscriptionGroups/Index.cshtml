@model eComm_Reporting_Application.Models.SubscriptionGroupsModel

@{
    ViewData["Title"] = "User Subscriptions Groups";
}

<div class="page-header">
    <div class="page-title">
        <h1 class="title-text">User Subscription Groups</h1>
    </div>
</div>

<div class="filter-data">
    <div class="first-row">
        <div class="is-active">
            <p class="radio-label filter-label">Is Active:</p>
            <div class="radio-btns">
                @Html.CheckBoxFor(m => m.isActive, htmlAttributes: new { @checked = true })
                <label id="yesBox" for="yes">Yes</label>
                @Html.CheckBoxFor(m => m.isActive, htmlAttributes: new { @checked = false })
                <label for="no">No</label>
            </div>
        </div>
        <div class="groupID">
            <label class="filter-label" for="groupIDDropdown">Group ID:</label>
            <select id="groupIDDropdown" name="groupIDDropdown" multiple>
                @foreach (var groupID in @Model.groupsIDList)
                {
                    <option value=@groupID> @groupID </option>
                }
            </select>
        </div>
    </div>
    
    <div class="second-row">
        <div class="group">
            <label class="filter-label" for="groupDropdown">Group:</label>
            <select id="groupDropdown" name="groupDropdown" multiple>
                @foreach (var group in @Model.groupsList)
                {
                    <option value=@group> @group </option>
                }
            </select>
        </div>
        <div class="master-group">
            <label class="filter-label" for="masterGroupDropdown">Master Group:</label>
            <select id="masterGroupDropdown" name="masterGroupDropdown" multiple>
                @foreach (var master_group in @Model.masterGroupsList)
                {
                    <option value=@master_group> @master_group </option>
                }
            </select>
        </div>
    </div>
    
    <button id="btnViewData" class="btnViewData" type="button">View Data</button>
</div>

<div class="separator-line">
</div>